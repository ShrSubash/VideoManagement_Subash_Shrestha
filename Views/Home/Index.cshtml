@model List<VideoManagementApp.Models.VideoFileInfo>
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header with toggle buttons only (removed heading) -->
            <div class="d-flex justify-content-end align-items-center mb-4">
                <div class="btn-group" role="group" aria-label="View toggle">
                    <button type="button" class="btn btn-outline-primary active" id="catalogueViewBtn">
                        <i class="bi bi-list-ul"></i> Catalogue
                    </button>
                    <button type="button" class="btn btn-outline-primary" id="uploadViewBtn">
                        <i class="bi bi-cloud-upload"></i> Upload
                    </button>
                </div>
            </div>
             
            <!-- Alert container for messages -->
            <div id="alertContainer"></div>

            <!-- Upload View (Initially Hidden) -->
            <div id="uploadView" style="display: none;">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-cloud-upload"></i> Upload Video Files
                        </h4>
                    </div>
                    <div class="card-body">
                        <form id="uploadForm" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="videoFiles" class="form-label fw-bold">
                                    <i class="bi bi-file-earmark-arrow-up"></i> Select Video Files
                                </label>
                                <input class="form-control"
                                       type="file"
                                       id="videoFiles"
                                       name="files"
                                       accept=".mp4,video/mp4"
                                       multiple
                                       required>
                                <div class="form-text">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Requirements:</strong>
                                    <ul class="mb-0 mt-1">
                                        <li>File format: <strong>MP4 only</strong></li>
                                        <li>Maximum size per file: <strong>200 MB</strong></li>
                                        <li>You can select multiple files at once</li>
                                    </ul>
                                </div>
                            </div>

                            <!-- Selected files preview -->
                            <div id="selectedFilesPreview" class="mb-3" style="display: none;">
                                <h6>Selected Files:</h6>
                                <ul id="filesList" class="list-group"></ul>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="button" class="btn btn-secondary" id="cancelUploadBtn">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary" id="uploadBtn">
                                    <i class="bi bi-upload"></i> Upload Files
                                </button>
                            </div>
                        </form>

                        <!-- Upload progress -->
                        <div id="uploadProgress" class="mt-3" style="display: none;">
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped progress-bar-animated"
                                     role="progressbar"
                                     style="width: 100%">
                                    Uploading...
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Catalogue View (Initially Visible) -->
            <div id="catalogueView">
                <!-- Video Player Section (Shows above table when video is playing) -->
                <div id="videoPlayerSection" class="mb-4" style="display: none;">
                    <div class="card shadow-sm">
                        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-play-btn"></i> Now Playing
                            </h5>
                            <button type="button" class="btn btn-sm btn-outline-light" id="closeVideoBtn">
                                <i class="bi bi-x-lg"></i> Close
                            </button>
                        </div>
                        <div class="card-body bg-dark p-0">
                            <div class="video-container">
                                <video id="videoPlayer"
                                       class="w-100"
                                       controls
                                       controlsList="nodownload">
                                    Your browser does not support the video tag.
                                </video>
                            </div>
                        </div>
                        <!-- Video info under the player -->
                        <div class="card-footer bg-light">
                            <div class="row">
                                <div class="col-md-8">
                                    <strong><i class="bi bi-file-earmark-play"></i> Filename:</strong>
                                    <span id="currentVideoName"></span>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <strong><i class="bi bi-hdd"></i> Size:</strong>
                                    <span id="currentVideoSize"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Catalogue Table -->
                <div class="card shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-collection-play"></i> Video Catalogue
                        </h4>
                    </div>
                    <div class="card-body">
                        @if (Model == null || !Model.Any())
                        {
                            <div class="alert alert-info" role="alert">
                                <i class="bi bi-info-circle"></i>
                                No videos available. Upload some videos to get started!
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover table-striped" id="videoTable">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" style="width: 10%">
                                                <i class="bi bi-play-circle"></i>
                                            </th>
                                            <th scope="col" style="width: 60%">Filename</th>
                                            <th scope="col" style="width: 30%">File Size</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var video in Model)
                                        {
                                            <tr class="video-row"
                                                data-video-url="@video.VideoUrl"
                                                data-video-name="@video.FileName"
                                                data-video-size="@video.FileSizeFormatted"
                                                style="cursor: pointer;">
                                                <td class="text-center">
                                                    <i class="bi bi-play-circle-fill text-success fs-4"></i>
                                                </td>
                                                <td>@video.FileName</td>
                                                <td>@video.FileSizeFormatted</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // This inline script initializes the page - main logic is in site.js
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the video management system
            if (typeof VideoManager !== 'undefined') {
                window.videoManager = new VideoManager();
            }
        });
    </script>
}